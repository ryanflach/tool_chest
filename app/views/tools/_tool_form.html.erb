<%= form_for(@tool) do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :price %>:
  <%= f.text_field :price %><br />

  <%= f.label :quantity %>:
  <%= f.number_field :quantity %><br />

  <%= f.label :category_id %>
  <%= f.select :category_id, categories %><br />

  <% if current_admin? %>
    <%= f.label :user_id %>
    <%= f.select :user_id, default_users %>
  <% end %>

  <%= f.submit %>
<% end %>
