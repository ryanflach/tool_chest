<!DOCTYPE html>
<html>
<head>
  <title>ToolChest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if most_recent_tool %>
    <p>
      <strong>Newest tool:</strong> <%= most_recent_tool.name %>
    </p>
  <% end %>

  <%= yield %>

</body>
</html>
